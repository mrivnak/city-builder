{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["major", "minor"],
      "automerge": false
    }
  ],
  "schedule": ["after 5pm on the first day of the month"],
  "timezone": "America/New_York"
}
